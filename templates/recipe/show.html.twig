{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.Name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ recipe.Duration}}</td>
            </tr>
            <tr>
                <th>Persons</th>
                <td>{{ recipe.Persons }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src={{ asset('uploads/images/' ~ recipe.getImage()) }} style="height:48px"></img></td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ recipe.User }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
